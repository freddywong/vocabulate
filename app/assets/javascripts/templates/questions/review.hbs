<div class="review-container col-md-8 col-md-offset-2">
  <div class="row">
    <p class="blank-padding col-md-4 col-md-offset-4"></p>
    <a href="/my_quizzes"><button class="back-quiz col-md-1 col-md-offset-3">x</button></a>
  </div>
  
  <div class="row">
    <div class="review-content col-md-6 col-md-offset-3">
      <span class="current-question">{{question.attributes.word}}</span>
      <div class="line-separator"></div>
      <span class="current-correct-answer">{{answer.attributes.sentence}}</span>
    </div>
    <button class="show-question-after-review col-md-3">Next</button>  
  </div>
</div>

