<div class="answer-correct-container col-md-8 col-md-offset-2">  <div class="row">
    <p class="correct col-md-4 col-md-offset-4">Correct!</p>
    <button class="back-quiz col-md-1 col-md-offset-3">x</button>
  </div>
  <div class="row">
    <div class="answer-correct-content col-md-6 col-md-offset-3">
      <div><img class="correct-tick" src="https://s3-ap-southeast-2.amazonaws.com/vocabulate/tick.png"></div>
      <span class="current-correct-question">{{question.word}}</span>
      <div class="line-separator"></div>
      <span class="current-correct-answer">{{answer.sentence}}</span>
    </div>
    <button class="show-question col-md-3">Next</button>
  </div>
</div>
  
