<div class="answer-incorrect-container col-md-8 col-md-offset-2">
  <div class="row">
    <p class="incorrect col-md-4 col-md-offset-4">Incorrect!</p>
    <button class="back-quiz col-md-1 col-md-offset-3">x</button>
  </div>
  <div class="row">
    <div class="answer-incorrect-content col-md-6 col-md-offset-3">
      <div><img class="incorrect-tick" src="https://s3-ap-southeast-2.amazonaws.com/vocabulate/cross.png"></div>
      <span class="current-incorrect-question">{{question.word}}</span>
      <div class="line-separator"></div>
      <span class="current-incorrect-answer">{{answer.sentence}}</span><span class="extra-answer-sentence"><br> is the correct answer</span>
    </div>
    <button class="show-question col-md-3" id="show-question-v2">Next</button>
  </div>
</div>

<audio id="incorrect-sound">
  <source src="https://s3-ap-southeast-2.amazonaws.com/vocabulate/Fail-sound.mp3"></source>
</audio>

<script>
  $(function() {
  var audio = $("#incorrect-sound")[0];
    audio.play();
  });
</script>   
